{
  "manifest_version": 3,
  "name": "Excalidraw Boolean Operations",
  "version": "1.0.0",
  "description": "Adds boolean shape operations (Union, Intersection, Difference, Exclusion) to Excalidraw",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://excalidraw.com/*",
    "https://app.excalidraw.com/*",
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://excalidraw.com/*", "https://app.excalidraw.com/*", "http://localhost/*"],
      "js": ["scripts/content-production.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/state-monitor.js", "scripts/debug-state.js", "scripts/simple-boolean-ops.js", "scripts/simple-boolean-ops-v2.js", "scripts/boolean-ops-exact.js", "scripts/diff-diff-exact.js", "scripts/override-boolean-ops.js", "scripts/perform-operation.js", "scripts/update-excalidraw.js", "scripts/debug-helper.js"],
      "matches": ["https://excalidraw.com/*", "https://app.excalidraw.com/*", "http://localhost/*"]
    }
  ]
}